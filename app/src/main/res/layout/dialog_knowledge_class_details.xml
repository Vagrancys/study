<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/width_10dp"
    android:background="@drawable/border_while_line_shape"
    android:layout_margin="@dimen/width_44dp">
    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size_18sp"
        android:textColor="@color/white"
        android:maxWidth="@dimen/width_100dp"
        android:ellipsize="end"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>
    <ImageView
        android:id="@+id/dialog_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/common_close_normal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_close"
        android:layout_marginTop="@dimen/width_10dp">
        <LinearLayout
            style="@style/dialog_linear_layout"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/width_10dp">
            <ImageView
                style="@style/dialog_image_view"
                android:src="@drawable/common_count_normal"/>
            <TextView
                android:id="@+id/dialog_count"
                style="@style/dialog_text_view"/>
        </LinearLayout>
        <LinearLayout
            style="@style/dialog_linear_layout"
            android:orientation="horizontal">
            <ImageView
                style="@style/dialog_image_view"
                android:src="@drawable/common_count_normal"
                android:layout_marginRight="@dimen/width_10dp"/>
            <TextView
                android:id="@+id/dialog_quality"
                style="@style/dialog_text_view"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>