<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_above="@+id/common_tab"/>
    <com.flyco.tablayout.CommonTabLayout
        android:id="@+id/common_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/width_10dp"
        app:tl_textsize="@dimen/size_18sp"
        app:tl_textUnselectColor="@color/white_1"
        app:tl_textSelectColor="@color/white"
        app:tl_tab_space_equal="true"
        app:tl_iconWidth="@dimen/width_25dp"
        app:tl_iconHeight="@dimen/width_25dp"
        app:tl_iconMargin="@dimen/width_1dp"/>
</RelativeLayout>
