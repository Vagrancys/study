<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/width_10dp">
    <CheckBox
        android:id="@+id/child_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@drawable/common_checkbox_selector"
        android:layout_marginRight="@dimen/width_10dp"/>
    <TextView
        android:id="@+id/child_title"
        style="@style/common_text_view"
        android:layout_toEndOf="@+id/child_checkbox"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/child_checkbox" />
</RelativeLayout>